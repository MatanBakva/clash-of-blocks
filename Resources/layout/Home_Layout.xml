
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<ImageView
		android:src="@drawable/headline"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<Button
		android:text="Play"
		android:layout_marginTop="50dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnPlay" />

	<Button
		android:text="Select level"
		android:layout_marginTop="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnSelectLvl" />

	<Button
		android:text="Instructions"
		android:layout_marginTop="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnInstructions" />

	<Button
		android:text="LeaderBoards"
		android:layout_marginTop="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnLeaderBoards" />

	<Button
		android:text="Worldwide LeaderBoards"
		android:layout_marginTop="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnLeaderBoardsFireBase" />

	<Button
		android:text="Store"
		android:layout_marginTop="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginLeft="50dp"
		android:textStyle="bold"
		android:textSize="15sp"
		android:textColor="@android:color/white"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/CB"
		android:fontFamily="@font/vampire"
		android:id="@+id/btnstore" />
	
</LinearLayout>